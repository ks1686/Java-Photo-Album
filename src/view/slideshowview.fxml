<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SlideshowViewController">

    <HBox alignment="CENTER">
        <!-- Previous Button -->
        <Button fx:id="previousButton" onAction="#previousPhoto" text="Previous" />
      <ImageView fx:id="slideshowImageView" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Next Button -->
        <Button fx:id="nextButton" onAction="#nextPhoto" text="Next" />
    </HBox>
</VBox>
